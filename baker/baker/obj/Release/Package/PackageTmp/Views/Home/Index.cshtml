<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-warning" role="status"></div>
    </div>

    <!-- Topbar End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-dark nav-fill fixed-top py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
        <a href="index.html" class="navbar-brand ms-4 ms-lg-0">
            <h1 class="text-warning m-0">نانوایی</h1>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav mx-auto p-4 p-lg-0">

                <a href="/Home/user_account" class="nav-item nav-link">حساب کاربری</a>
                <a href="/Home/index" class="nav-item nav-link active">خانه</a>
            </div>
            <div class=" d-none d-lg-flex">
                <div class="flex-shrink-0 btn-lg-square border border-light rounded-circle">
                    <i class="fa fa-phone text-warning"></i>
                </div>
                <div class="ps-3">
                    <small class="text-warning mb-0">تماس با ما</small>
                    <p class="text-light fs-5 mb-0">+@ViewBag.phone</p>
                </div>
            </div>
        </div>
    </nav>

    <!-- Navbar End -->
    <!-- Carousel Start -->
    <div class="container-fluid p-0 pb-5 wow fadeIn" data-wow-delay="0.1s" >
        <div class="owl-carousel header-carousel position-relative">
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="@ViewBag.banerimg" alt="">
                <div class="owl-carousel-inner">
                    <div class="container" dir="rtl">
                        <div class="row justify-content-end">
                            <div class="col-lg-8">
                                <h1 class="display-1 text-light mb-4 animated slideInDown">@ViewBag.title</h1>
                                <p class="text-light fs-5 mb-4 pb-3">@ViewBag.dis</p>

                                <div  class=" row  mb-4 col-sm-6 text-light send"> </div>

                                <a href="#buy" class="btn btn-warning rounded-pill py-3 px-5">خریدنان</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Carousel End -->
    <!-- Product Start -->
    <div class=" container-xxl bg-light my-6 py-6 pt-0">
        <div class="container">
            <div class="bg-warning text-light rounded-bottom p-5 my-6 mt-0 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row g-4 align-items-center" dir="rtl">
                    <div class="col-lg-6">

                        <h6 class="text-dark mb-0"><i class="fa fa-calendar fa-4x flex-shrink-0"></i>زمان های فعالیت نانوایی</h6>
                    </div>
                    <div class=" text-lg-end">
                        <div class="d-inline-flex align-items-center text-end">

                            <table style="width:100%">
                                <tr>
                                    <td>شنبه</td>
                                    <td>@ViewBag.sattime</td>

                                </tr>
                                <tr>
                                    <td>یکشنبه</td>
                                    <td>@ViewBag.suntime</td>
                                </tr>
                                <tr>
                                    <td>دوشنبه</td>
                                    <td>@ViewBag.montime</td>
                                </tr>
                                <tr>
                                    <td>سه شنبه</td>
                                    <td>@ViewBag.tuetime</td>
                                </tr>
                                <tr>
                                    <td>چهارشنبه</td>
                                    <td>@ViewBag.montime</td>
                                </tr>
                                <tr>
                                    <td>پنج شنبه</td>
                                    <td>@ViewBag.thutime</td>
                                </tr>
                                <tr>
                                    <td>جمعه</td>
                                    <td>@ViewBag.fritime</td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-4" id="buy">

                <div class=" col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="product-item d-flex flex-column bg-white rounded overflow-hidden h-100">
                        <div class="text-center p-4">
                            <div class="d-inline-block border border-warning rounded-pill pt-1 px-3 mb-3">@ViewBag.Nprice<p>تومان</p></div>
                            <h3 class="mb-3">@ViewBag.Nname</h3>
                            <span>@ViewBag.Ndis<br /><br /><br /><br /><br /><br /></span>
                            <div class="position-relative mt-auto">
                                <img class="img-fluid" src="@ViewBag.Nimg" alt="">
                                <div class="product-overlay">
                                    <a class="btn btn-lg-square btn-outline-light rounded-circle" href=""><i class="fa fa-eye text-warning"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class=" col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="   bg-white rounded  h-100">

                        <!-- Contact Start -->
                        <div class="container-xxl py-6">

                            <div class="container " dir="rtl">
                                <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">

                                    <h1 class="display-6 mb-4">سفارش</h1>
                                </div>
                                <div class="row g-0 justify-content-end">
                                    <div class="col-lg-8 wow fadeInUp" data-wow-delay="0.1s">

                                       
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input type="number" class="form-control" id="num" placeholder="تعداد" required>

                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <br /><textarea class="form-control" placeholder="توضیحات سفارش" id="message" style="height: 200px"></textarea>

                                                    </div>
                                                </div>



                                            </div>

                                            <br />
                                            <div class="input-group">
                                                <br />
                                                <label for="visitdatetime_add">سفارش برای امروز/ ساعت:</label>
                                                <input type="time" class="form-control" id="visitdatetime_add" placeholder="زمان" />
                                            </div>
                                            <br />
                                            <div class="send2">

                                            </div>

                                            <div class="col-12 text-center">
                                                <br /><br /> <button class="btn btn-warning rounded-pill py-3 px-5" onclick="setfactor()">ثبت سفارش</button>
                                            </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Contact End -->

                    </div>
                </div>



            </div>


        </div>

    </div>


    <!-- Testimonial End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer my-6 mb-0 py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5" dir="rtl">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">نشانی ما</h4>
                    <p class="mb-2"><i class="fa fa-map-marker me-3"></i>@ViewBag.address</p>
                    <p class="mb-2"><i class="fa fa-phone me-3"></i>+@ViewBag.phone</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@ViewBag.email</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
