    <!-- SlimScroll -->
    <script src="~/assets/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/assets/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/lib/wow/wow.min.js"></script>
    <script src="~/assets/lib/easing/easing.min.js"></script>
    <script src="~/assets/lib/waypoints/waypoints.min.js"></script>
    <script src="~/assets/lib/counterup/counterup.min.js"></script>
    <script src="~/assets/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/assets/js/main.js"></script>


    <script src="~/assets/js/bootstrap.min.js"></script>



    <!-- Template Javascript -->
    <script>
        $(document).ready(function () {
             $.post("/Home/checksend2")
                .done(function (res) {
                    if (res.res == "true") {
                        $(".send").empty();

                            $(".send").append(
                                '<i class="fa fa-check text-warning me-2 "></i> ارسال به درب منزل('+res.Psend+'تومان)'

                             );


                        $(".send2").empty();

                        $(".send2").append(

                        '<input type="checkbox" id="send" value="ارسال به درب منزل">'+
                            '<label > ارسال به درب منزل(' + res.Psend +'تومان)</label>'

                        );

                    }
                })
                .fail(function () {


                })
                .always(function () {

                });


        });
        function setfactor() {
            
            
            localStorage.setItem("factor", $("#num").val());
            var today = new Date();
            var dd = String(today.getDate()).padStart(2, '0');
            var mm = String(today.getMonth() + 1).padStart(2, '0'); 
            var yyyy = today.getFullYear();
            today = mm + '/' + dd + '/' + yyyy;
            localStorage.setItem("timefactor", today+$("#visitdatetime_add").val());
            localStorage.setItem("disfactor", $("#message").val()); 

                 var state = $("#send").is(':checked');
            if (state == true) {
                localStorage.setItem("Psend", 1);
            } else {
                localStorage.setItem("Psend", 2);
            }

            window.location.href = "user_account";
            
        }

    </script>

</body>

</html>

